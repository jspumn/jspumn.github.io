<button onclick="calculateCosts()">Calculate</button>

<hr>

<h2>Economic Output</h2>
<div id="output" class="output"></div>

<script>
/* ----------------------------------------------------
   ASF ECONOMIC COST FORMULAS
   ----------------------------------------------------
   Let:
     F  = number of farms culled
     P  = pigs per farm
     Cp = compensation per pig
     Cd = depopulation operational cost per pig
     Cc = carcass disposal cost per pig

     Ft   = number of farms tested
     Clab = lab test cost
     Cppe = PPE cost per sampling

     V  = official visits per culled farm
     Cv = cost per visit

     M  = movement control checkpoints
     Cm = checkpoint cost per day
     D  = number of days of movement control

   Total pigs culled = F × P

   Cost components:
     Compensation               = (F × P) × Cp
     Depopulation              = (F × P) × Cd
     Carcass disposal          = (F × P) × Cc
     Laboratory testing        = Ft × (Clab + Cppe)
     Official staff            = F × V × Cv
     Movement control          = M × Cm × D

   Total cost = SUM(all components)
---------------------------------------------------- */

function calculateCosts() {

    const F  = Number(document.getElementById("farmsCulled").value);
    const P  = Number(document.getElementById("pigsPerFarm").value);
    const Cp = Number(document.getElementById("compensation").value);
    const Cd = Number(document.getElementById("munitionCost").value);
    const Cc = Number(document.getElementById("carcassCost").value);

    const Ft   = Number(document.getElementById("farmsTested").value);
    const Clab = Number(document.getElementById("labCost").value);
    const Cppe = Number(document.getElementById("ppeCost").value);

    const V  = Number(document.getElementById("visitsPerFarm").value);
    const Cv = Number(document.getElementById("staffCost").value);

    const M  = Number(document.getElementById("checkpoints").value);
    const Cm = Number(document.getElementById("checkpointCost").value);
    const D  = Number(document.getElementById("daysControl").value);

    const pigsTotal = F * P;

    const costComp  = pigsTotal * Cp;
    const costDepop = pigsTotal * Cd;
    const costCarc  = pigsTotal * Cc;
    const costLab   = Ft * (Clab + Cppe);
    const costStaff = F * V * Cv;
    const costMove  = M * Cm * D;

    const totalCost = costComp + costDepop + costCarc + costLab + costStaff + costMove;

    document.getElementById("output").innerHTML = `
        <h3>Total Economic Cost (NTD): <strong>${totalCost.toLocaleString()}</strong></h3>
        <p><strong>Compensation:</strong> ${costComp.toLocaleString()}</p>
        <p><strong>Depopulation:</strong> ${costDepop.toLocaleString()}</p>
        <p><strong>Carcass Disposal:</strong> ${costCarc.toLocaleString()}</p>
        <p><strong>Laboratory Testing:</strong> ${costLab.toLocaleString()}</p>
        <p><strong>Official Staff:</strong> ${costStaff.toLocaleString()}</p>
        <p><strong>Movement Control:</strong> ${costMove.toLocaleString()}</p>
    `;
}
</script>

